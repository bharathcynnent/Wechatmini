.app-header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-evenly;
  background-color: #fff;
  box-shadow: 3px 3px 3px rgb(208, 216, 221);
  height: 60px;
  margin-top: 55px;
}
.menu-bar {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 20px;
  height: 18px;
  transition: box-shadow 0.3s;
}
.menu-bar.active {
  box-shadow: 0 2px 5px rgba(161, 29, 29, 0.4);
}
.line {
  width: 100%;
  height: 3px;
  background-color: #333;
  border-radius: 2px;
}
.logo {
  height: 100px;
  width: 110px;
}
.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgba(235, 220, 220, 0.836);
  border-radius: 5px;
}
.search-bar icon {
  margin-right: 3px;
  color: #888;
}
.search-bar input {
  font-size: 12px;
  color: #333;
  width: 130px;
}
.user-icon {
  width: 15px;
  height: 15px;
}
.side-menu {
  position: absolute;
  top: 115px;
  width: 150px;
  background-color: white;
  box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
  z-index: 100;
}
.menu-item {
  padding: 10px 15px;
  border-bottom: 1px solid #f0f0f0;
  color: #333;
}