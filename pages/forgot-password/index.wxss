.forgot-password-page {
  height: 100vh;
  padding: 20px;
  display: flex;
  flex-direction: column;
}
.forgot-password-container {
  margin-top: 100px;
  padding: 0 0 0 5px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.forgot-password-heading {
  font-size: 20px;
  font-weight: bold;
  color: #126F67;
  text-align: left;
}
.forgot-password-description {
  font-size: 12px;
  color: #747474;
  text-align: left;
  line-height: 1.5;
}
.input-group {
  display: flex;
  flex-direction: column;
  margin-top: 25px;
}
.input-label {
  font-size: 14px;
  color: #333333;
  text-align: left;
  margin: 6px;
}
.input-field {
  border: 1px solid #ccc;
  border-radius: 10px;
  padding: 5px;
  font-size: 15px
}
.input-field::placeholder {
  color: #999;
}
.button-container {
  display: flex;
  flex-direction: row;
  gap: 10px;
  margin-top: 20px;
}
button {
  padding: 10px 20px;
  border-radius: 10px;
  font-size: 16px;
  flex: 1;
  font-size: 12px;
}
.cancel-button {
  border: 1px solid black;
  background-color: white;
  color: black;
  flex-grow: 0.4;
}
.send-email-button {
  background-color: rgb(98, 98, 214);
  color: white;
  flex-grow: 1;
}
app-footer {
  margin: 180px -12px;
}