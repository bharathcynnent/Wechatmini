.products-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.products-scroll {
  flex: 1;
  overflow: scroll;
}
.table {
  display: flex;
  flex-direction: column;
  margin: 10px;
  border: 1px solid rgb(22, 1, 1);
  width: 80vh;
}
.table-header {
  display: flex;
  flex-direction: row;
  background-color: #5ddb43;
  font-weight: bold;
}
.table-row {
  display: flex;
  flex-direction: row;
}
.table-cell {
  flex: 1;
  padding: 8px;
  text-align: left;
}
app-footer {
  margin-bottom: 10px;
}