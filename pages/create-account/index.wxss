.login-page {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
}

.login-container {
  padding: 24rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 400px;
  border-radius: 10rpx;
}

.welcome-heading {
  font-size: 24px;
  font-weight: bold;
  color: #126F67;
  text-align: left;
  margin-bottom: 10px;
}

.login-description {
  font-size: 14px;
  color: #747474;
  text-align: left;
  line-height: 1.5;
  margin-bottom: 20px;
}

.input-group {
  display: flex;
  flex-direction: column;
}

.input-label {
  font-size: 16px;
  color: #333333;
  text-align: left;
  margin: 6px 0 4px 0;
}

.email-input {
  flex: 1;
  border: 1px solid #ccc;
  font-size: 16px;
  padding: 10px;
  border-radius: 10px;
}

.password-container {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: #fff;
  padding: 0 10px;
  margin-bottom: 10px;
}

.password-input {
  flex: 1;
  border: none;
  font-size: 16px;
  padding: 10px 0;
}

.eye-icon {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.remember-forgot-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
}

.remember-me {
  font-size: 12px;
  display: flex;
  align-items: center;
  color: #555;
}

.remember-me checkbox {
  margin-right: 6px;
}

.login-button {
  background-color: #126F67;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  margin-top: 10px;
  padding: 12px;
}

.login-button:active {
  background-color: #C0C0C0;
}

.separator-container {
  display: flex;
  align-items: center;
  gap: 10px;
  margin: 15px 0;
}

.separator {
  flex-grow: 1;
  height: 1px;
  background-color: #ccc;
}

.separator-text {
  color: #777;
  font-size: 10px;
}

.create-account-button {
  background-color: #FFFFFF;
  color: #126F67;
  border: 1px solid #126F67;
  border-radius: 4px;
  padding: 10px;
  font-size: 14px;
}

.create-account-button:active {
  background-color: #E0ECEB;
}

app-footer {
  margin-top: 25px;
}
.link {
  color: #126F67;
  text-decoration: underline;
}